<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:background="@color/White" >

    <com.uf.dancemarathon.CircleView
        android:id="@+id/grid_kid_pic"
        android:layout_width="@dimen/kidimage_width" 
        android:layout_height="@dimen/kidimage_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"/>

	<TextView
        android:id="@+id/grid_kid_name" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_below="@+id/grid_kid_pic"
        android:layout_marginTop="2dp"
        android:textSize="@dimen/mtk_text"
        android:layout_centerHorizontal="true"
        android:textColor="@color/dm_blue_primary" />
    
</RelativeLayout>